<div id="ajax_famille_add">
	{{ form_start(form) }}
	<div class="modal-header">
		<h5 class="modal-title">
			Ajout d'une famille au patient
			{{ patient.prenom }}
			{{ patient.nom }}
		</h5>
		<button type="button" class="close" data-dismiss="modal"
			aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>

	<div class="modal-body">
		{{ form_row(form.patient) }}
		{{ form_row(form.nom) }}
		{{ form_row(form.prenom) }}
		{{ form_row(form.lien_famille) }}
		{{ form_row(form.email) }}
		{{ form_row(form.numero_tel) }}
		{{ form_row(form.pmr) }}

		
		<div class="form-group">
			<label for="famille_famille_adresse">Ajouter ou selectionner une adresse associée au patient</label> 
			<select id="famille_famille_adresse" name="famille[famille_adresse]" class="form-control">
				<option value="0">Nouvelle Adresse</option>
				   {%  for famille in patient.familles %}
					<option value="{{ famille.id }}">{{ famille.prenom }} {{ famille.nom }} ( {{ famille.lienFamille | lienParente }} )</option>
				   {% endfor %}
			</select>
		</div>

		<p id="info-adresse-patient" class="text-center">
		</p>

		<div id="adresse">
			{{ form_row(form.famille_adresse) }}
		</div>
	</div>

	<div class="modal-footer">
		<!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> -->
		{{ form_widget(form.save) }}
	</div>
	{{ form_rest(form) }}
	{{ form_end(form) }}

	{% block javascripts %}
	<script type="text/javascript">
    
    	$('#modal_famille_global').modal({
    		   'show' : true,
    		   'backdrop' : 'static'
    	});
    	
		var url = '{{path('famille_ajax_add', {'id': patient.id }) }}';
		//jsonPatient tableau contenant les infos des familles (id, nom, prenom, familleAdresse) encodé en json
		var jsonPatient = {{ jsonPatient|json_encode|raw }};
		
		Patient.EventAddSubmit(url, jsonPatient);
	
	    </script>
	{% endblock %}