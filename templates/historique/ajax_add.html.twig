<div id="ajax_historique_add">
	{{ form_start(form) }}
	<div class="modal-header">
		<h5 class="modal-title">
			Ajout d'un historique pour 
			{% if type == 'evenement' %}
				l'événement {{ objet.nom }}
			{% elseif type == 'specialite' %}
				la spécialité {{ objet.service }}
			{% elseif type == 'patient' or type == 'membre' %}
				le {{ type }} #{{ objet.id  }} {{ objet.prenom }} {{ objet.nom }}
			{% endif %}
		</h5>
		<button type="button" class="close" data-dismiss="modal"
			aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>

	<div class="modal-body">
	    {{ form_row(form.evenement) }}
	    {{ form_row(form.specialite) }}
		{{ form_row(form.patient) }}
		
		<div class="modal-footer">
		{{ form_widget(form.save) }}
	</div>
	{{ form_rest(form) }}
	{{ form_errors(form) }}
	{{ form_end(form) }}
</div>

	{% block javascripts %}
	<script type="text/javascript">
    
    	$('#modal_{{ type }}_global').modal({
    		   'show' : true,
    		   'backdrop' : 'static'
    	});
    	
		var url = '{{path('historique_ajax_add', {'id': objet.id, 'type':type }) }}';
		Historique.EventAddSubmit(url);
	    </script>
	{% endblock %}