{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ 'src/Controller/MessageController.php'|file_link(0) }}">src/Controller/MessageController.php</a></code></li>
        <li>Your template at <code><a href="{{ 'templates/message/index.html.twig'|file_link(0) }}">templates/message/index.html.twig</a></code></li>
    </ul>
</div>

<div>
	
	{% for message in messages %}
		 
		{% if message.message != null %}	
		<br /> Message ID :
        {{ message.message.id }}
		<br />
		{% endif %}
		
		<br /> 
		Expediteur :
        {{ message.expediteur.prenom }} - {{ message.expediteur.nom }}
		<br />

		<br /> 
		Destinataire :
        {{ message.destinataire.prenom }} - {{ message.destinataire.nom }}
		<br />

	   	Groupe :
	   	{{ message.groupe.id }}
	   	<br />
	   
	   	Titre :
	   	{{ message.titre }}
	   	<br />
	    
	   	Corps :
	   	{{ message.corps }}
	   	<br />
	   	
	   	Date envoi :
	   	{{ message.dateEnvoi |date("m/d/Y H:i") }}
	   	<br />
	   	
	    {% for piecejointe in message.pieceJointes %}
	    --- PJ : {{ piecejointe.titre }}
	   	<br />
	    {% endfor %}
	   	<hr>
	{% endfor %}
</div>
{% endblock %}
