<div id="ajax_new_message">
{{ form_start(form, {'attr' : {'id' : 'form_message', 'action' : path('message_ajax_new_message')}}) }}
    <div class="modal-header">
    	<h5 class="modal-title">RÃ©digez votre nouveau message</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        	<span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
    	<div class="form-group">
    		<label for="destinataire">Destinataires</label>
    		<input type="text" class="form-control" id="destinataire" name="message[destinataire]" placeholder="Destinataire">
  		</div>
    	{{ form_row(form.titre) }}
    	{{ form_row(form.corps) }}
    	Enregistrer en tant que {{ form_row(form.brouillon) }}
    </div>
    <div class="modal-footer">
    	{{ form_row(form.submit) }}
    </div>
    {{ form_rest(form) }}
	{{ form_end(form) }}
</div>
    
{% block javascripts %}
<script type="text/javascript">

	$('#modal_message_global').modal({
		   'show' : true,
	   	'backdrop' : 'static'
	});

	$('#modal_message_global').on('hidden.bs.modal', function (e) {
		tinymce.remove();
		$('#messagerie-block #modal_message_global #bloc_modal').html('');
	});
	
	$(document).ready(function() {

		// Prevent jQuery UI dialog from blocking focusin
		$(document).on('focusin', function(e) {
		    if ($(e.target).closest(".mce-window, .moxman-window").length) {
		        e.stopImmediatePropagation();
		    }
		});

		tinymce.init({
		    selector: '#message_corps',
		    height: 230,
		    plugins: 'link image advlist lists help preview table wordcount searchreplace emoticons',
		    language: 'fr_FR'
		  });

		Messagerie.EventPopin();
		Messagerie.AutoComplete('{{path('membre_ajax_autocomplete')}}');
	});
</script>
{% endblock %}