{% extends 'base.html.twig' %}

{% block title %} Fiche d'un établissement {% endblock %}

{% block body %}

    <h1>Fiche de l'établissement #{{ etablissement.id }} - {{ etablissement.nom }}</h1>
    
    {% include 'elements/arborescence.html.twig' %}
    
    <table  class="table table-sm">
    	<tr>
    		<th scope="col"> Nom </th>
    		<td> {{ etablissement.nom }} </td>
    	</tr>
    	<tr>
    		<th scope="col"> Type </th>
    		<td> {{ etablissement.type }} </td>
    	</tr>
    	<tr>
    		<th scope="col"> Code Logistique </th>
    		<td> {{ etablissement.codeLogistique }} </td>
    	</tr>
    	<tr>
    		<th scope="col"> Date de début de collaboration </th>
    		<td> {{ etablissement.dateCollaboration | date('d/m/Y') }} </td>
    	</tr>
    	<tr>
    		<th scope="col"> Statut de la convention </th>
    		<td> {{ etablissement.statutConvention }} </td>
    	</tr>
    	<tr>
    		<th scope="col"> Nombre de lit </th>
    		<td> {{ etablissement.nbLit }} </td>
    	</tr>
    	<tr>
    		<th scope="col"> Adresse </th>
    		<td>
    		    {{ etablissement.numeroVoie }}, {{ etablissement.voie }} <br />
    			{{ etablissement.codePostal }} {{ etablissement.ville }} <br />
    			{{ etablissement.region }}
    		</td>
    	</tr>
    </table>
    <br />

	<div id="bloc_etablissement_specialite">
    	<div class="row">
    		<div class="col-md-4 offset-md-4">
    			<div class="progress" style="height: 25px;">
    				<div class="progress-bar progress-bar-striped progress-bar-animated"
    					role="progressbar" aria-valuenow="75" aria-valuemin="0"
    					aria-valuemax="100" style="width: 50%">Chargement des
    					informations de l'établissement...</div>
    			</div>
    		</div>
    	</div>
    </div>
    
    <!-- Modal -->
    <div class="modal fade" id="modal_specialite_global" tabindex="-1" role="dialog">
    	<div class="modal-dialog" role="document">
    		<div class="modal-content" id="bloc_modal"></div>
    	</div>
    </div>

{% endblock %}

{% block script %}
 	<script src="{{ asset('assets/js/specialite/Specialite.js') }}?{{ date().timestamp }}"></script>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
    
    $(document).ready(function() {

		var params = {
				url_ajax_see : '{{path('etablissement_specialite_ajax_see', {'id': etablissement.id}) }}',
				id_content_modal : '#bloc_modal',
				id_modal : '#modal_specialite_global',
				id_global : '#bloc_etablissement_specialite',
				id_bloc_etablissement : '',
				id_specialite : ''
		};
        
    	Specialite.Launch(params);
    	Specialite.LoadSpecialite();
    });
    
    </script>
{% endblock %}