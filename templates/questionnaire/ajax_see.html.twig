<div id="ajax_questionnaire_see">
	<a href="{{path('questionnaire_ajax_edit', {'id': questionnaire.id }) }}" id="btn-edit-questionnaire" class="btn btn-primary float-right">Editer</a><br/>
	
    {{ questionnaire.titre }} <br />
	<hr>
	Date de creation : <b>{{ questionnaire.dateCreation | date('d/m/Y') }}</b> - Date de fin : <b>{{ questionnaire.dateFin | date('d/m/Y') }}</b>
	
	
	{% for question in questionnaire.questions %}

        <div class="card">
        	<div class="card-header">
        		{{ question.libelleTop }} #{{ question.id }}
        			<a href="{{path('question_ajax_edit', {'id': question.id }) }}" id="btn-edit-question" class="btn btn-primary float-right btn-edit-question">Editer la question</a><br/>
        	</div>
        
        	<div class="card-body">
        		
        		<table class="table table-sm table-striped">
        			<tr>
        				Description : {{ questionnaire.description }}
        			</tr>
        			<tr>
        				<th>Libelle :  {{ question.libelle }}</th>
        			</tr>
        			<tr>
        				<th>Type : {{ question.type }}</th>
        			</tr>
        			<tr>
        				<th>valeurDefaut : {{ question.valeurDefaut }}</th>
        			</tr>
        			<tr>
        				<th>obligatoire : {{ question.obligatoire }}</th>
        			</tr>
        			<tr>
        				<th>regles : {{ question.regles }}</th>
        			</tr>
        			<tr>
        				<th>messageErreur : {{ question.messageErreur }}</th>
        			</tr>
        			<tr>
        				<th>ORDRE : {{ question.ordre }}</th>
        			</tr>
        		</table>
        	</div>
        	
        	<div class="card-footer">
        		{{ question.libelleBottom }}<br/>
        		Nombre de jours avant relance : {{ questionnaire.jourRelance }}
        	</div>
        </div>
		<hr>
    {% endfor %}

	{% block javascripts %}
    <script type="text/javascript">

    var id_btn_questionnaire = '#btn-edit-questionnaire';
    Questionnaire.EventEdit(id_btn_questionnaire);

    var id_btn_question = '#ajax_questionnaire_see .btn-edit-question';
    Question.EventEdit(id_btn_question)

    </script>
{% endblock %}

	
</div>