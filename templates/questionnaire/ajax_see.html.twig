<div id="ajax_questionnaire_see">

    	<div class="card shadow-sm">
         	<div class="card-header bg-light">
            	 <b>Titre du questionnaire :</b> {{ questionnaire.titre }}
            	<div class="float-right">
            		 {% if "now"|date('Y-m-d') > questionnaire.dateFin|date('Y-m-d') %}
            		 
            		 	<a href="#" id="btn-add-question" class="btn btn-primary btn-add-question disabled"> <span class="oi oi-plus"></span> Nouvelle question</a>  
            			<a href="{{path('questionnaire_ajax_edit', {'id': questionnaire.id }) }}" id="btn-edit-questionnaire" class="btn btn-dark"><span class="oi oi-pencil"></span> Editer</a>
            			<a href="#" id="btn-edit-questionnaire" class="btn btn-success disabled"><span class="oi oi-share"></span> Publier</a>
            			<a href="{{path('questionnaire_demo', {'slug': questionnaire.slug }) }}" id="btn-demo-questionnaire" class="btn btn-info disabled"><span class="oi oi-monitor"></span> Tester</a>
            			<a href="#" id="btn-demo-questionnaire" class="btn btn-secondary"><span class="oi oi-fork"></span> Dupliquer</a>
            		 
            		 {% else %}
            		  
            		  	<a href="{{path('question_ajax_add', {'id': questionnaire.id }) }}" id="btn-add-question" class="btn btn-primary btn-add-question"> <span class="oi oi-plus"></span> Nouvelle question</a>  
            			<a href="{{path('questionnaire_ajax_edit', {'id': questionnaire.id }) }}" id="btn-edit-questionnaire" class="btn btn-dark"><span class="oi oi-pencil"></span> Editer</a>
            			<a href="#" id="btn-edit-questionnaire" class="btn btn-success"><span class="oi oi-share"></span> Publier</a>
            			<a href="{{path('questionnaire_demo', {'slug': questionnaire.slug }) }}" id="btn-demo-questionnaire" class="btn btn-info"><span class="oi oi-monitor"></span> Tester</a>
            			<a href="#" id="btn-demo-questionnaire" class="btn btn-secondary"><span class="oi oi-fork"></span> Dupliquer</a>
            		  
            		  {% endif %}
            	</div>
            </div>
          	<div class="card-body">
            	<b>Date de cr√©ation :</b> {{ questionnaire.dateCreation | date('d/m/Y') }} - 
                {% if "now"|date('Y-m-d') > questionnaire.dateFin|date('Y-m-d') %}
            		<span class="text-danger"><b>Date de fin : {{ questionnaire.dateFin | date('d/m/Y') }}</b></span></br>
                {% else %}
                	Date de fin : {{ questionnaire.dateFin | date('d/m/Y') }}
                {% endif %}
            	
            	<b>Description :</b> {{ questionnaire.description }}</br>
            	<b>Nombre de jours avant relance :</b> {{ questionnaire.jourRelance }}</br>
            	<b>Actif :</b> 
            	{% if questionnaire.disabled == 0 %} Oui 
            	{% else %} Non
            	{% endif %}
            	</br>
          	</div>
        </div>
	<hr>
     		
	{{ questionnaire(questionnaire, {
	'statut' : 'edit',
	'edit_url' : path('question_ajax_edit', {'id': 0 }),
    }) | raw }}

	{% block javascripts %}
    <script type="text/javascript">

    var id_btn_questionnaire = '#btn-edit-questionnaire';
    Questionnaire.EventEdit(id_btn_questionnaire);

    var id_btn_question = '#ajax_questionnaire_see .btn-edit-question';
    Question.EventEdit(id_btn_question)
    
    var id_btn_question_add = '#ajax_questionnaire_see .btn-add-question';
    Question.EventEdit(id_btn_question_add)
    
    </script>
{% endblock %}

	
</div>