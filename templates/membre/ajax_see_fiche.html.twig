<div class="card-body">
	<div class="row align-items-center">
    		<div class="col-md-1">
	            {{ image('membre', membre.avatar) | raw }}
	        </div>
			<div class="col-md-11">
            	<table  class="table table-sm">
            
                   	<tr>
                   		<th scope="col"> Nom </th>
                   		<td> {{ membre.nom }} </td>
                   		<th scope="col"> Prénom </th>
                   		<td> {{ membre.prenom }} </td>
                   		<th scope="col"> Pseudo </th>
                   		<td > {{ membre.username }} </td>
                   	</tr>
                   	<tr>
                   		<th scope="col"> Numéro de téléphone </th>
                   		<td> {{ membre.numeroTel }} </td>
                   		<th scope="col"> Email </th>
                        <td> {{ membre.email }} </td>
                        <th scope="col"> Membre présent dans l'annuaire </th>
                        <td> {{ membre.annuaire | bool }} </td>
                    </tr>
                    <tr>
                    	<th scope="col"> Etablissement </th>
                        <td> {{ membre.etablissement.nom }} {{ popup(infoEtablissement(membre.etablissement), membre.etablissement.nom) |raw }} </td>
                        <th scope="col"> Spécialité </th>
                        <td> {% if membre.specialite != null %} {{ membre.specialite.service }} {{ popup(infoSpecialite(membre.specialite), membre.specialite.service) |raw }} {% endif %} </td>
                        <th scope="col"> Fonction </th>
                        <td> {{ membre.fonction }} </td>
                    </tr>
                    <tr>
                    	<th scope="col"> Signature </th>
                        <td colspan="5"> {{ membre.signature }} </td>
                    </tr>
            	</table>
			</div>
		</div>
</div>

{% block javascripts %}
    <script type="text/javascript">
    	$(function () {
    		$('[data-toggle="popover"]').popover()
    	});
    	
    	$(function () {
        	$('.example-popover').popover({
        		container: 'body'
        	})
    	});
        $('.popover-dismiss').popover({
        	trigger: 'hover'
        });
    </script>
{% endblock %}