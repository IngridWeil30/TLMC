{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ 'src/Controller/ParticipantController.php'|file_link(0) }}">src/Controller/ParticipantController.php</a></code></li>
        <li>Your template at <code><a href="{{ 'templates/participant/index.html.twig'|file_link(0) }}">templates/participant/index.html.twig</a></code></li>
    </ul>
</div>

<div>
    {% for participant in participants %}
	
			Evenement : {{ participant.evenement.nom }} <br />
			Patient : {{ participant.patient.prenom }} - {{ participant.patient.nom }}<br />
			{% if participant.famille != null %}
			Famille : {{ participant.famille.prenom }} - {{ participant.famille.nom }}<br />	
			{% endif %}
			
			Date : {{ participant.date |date("m/d/Y H:i") }}
			<br />			
			
			Statut : {{ participant.statut }}
			<br />			
			<hr>
	{% endfor %}

</div>  
{% endblock %}
