<div id="ajax_famille_adresse_edit">
	{{ form_start(form) }}
	<div class="modal-header">
		<h5 class="modal-title">
			Modification de la famille #{{ adresse.id }}
		</h5>
		<button type="button" class="close" data-dismiss="modal"
			aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>

	<div class="modal-body">
	    {{ form_row(form.numero_voie) }}
	    {{ form_row(form.voie) }}
    	{{ form_row(form.ville) }}
    	{{ form_row(form.code_postal) }}
    </div>

	<div class="modal-footer">
		{{ form_widget(form.save) }}
	</div>
	{{ form_rest(form) }}
	{{ form_end(form) }}
</div>

	{% block javascripts %}
	<script type="text/javascript">
    
    	$('#modal_famille_global').modal({
    		   'show' : true,
    		   'backdrop' : 'static'
    	});
    	
		var url = '{{path('famille_adresse_ajax_edit', {'id': adresse.id }) }}';
		
		Famille.EventEditAdresseSubmit(url);
	
	    </script>
	{% endblock %}