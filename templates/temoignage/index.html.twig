	   	{{ temoignage.lienParente }}
	   	<br />
	   		   	
	   	Age :
	   	{{ temoignage.age }}
	   	<br />
	   
	   	Ville :
	   	{{ temoignage.ville }}
	   	<br />

	   	Date création :
	   	{{ temoignage.dateCreation |date("m/d/Y H:i") }}
