<div id="ajax_temoignage_add">
	{{ form_start(form) }}
	<div class="modal-header">
		<h5 class="modal-title">
			Ajout d'un témoignage 
			{% if type == 'membre' %}
				au membre {{ objet.prenom }} {{ objet.nom }}
			{% elseif type == 'evenement' %}
				à l'événement {{ objet.nom }}
			{% elseif type == 'produit' %}
				au produit {{ objet.titre }}
			{% endif %}
		</h5>
		<button type="button" class="close" data-dismiss="modal"
			aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>

	<div class="modal-body">
        {{ form_start(form) }}
    
    	{% if type == 'membre' %}
    		{{ form_row(form.evenement) }}
    	    {{ form_row(form.produit) }}
    	{% elseif type == 'evenement' %}
    		{{ form_row(form.evenement) }}
    	{% elseif type == 'produit' %}
    	    {{ form_row(form.produit) }}
    	{% endif %}
    	
        {{ form_row(form.titre) }}
    	{{ form_row(form.corps) }}
    	{{ form_row(form.prenom_temoin) }}
    	{{ form_row(form.age) }}
    	{{ form_row(form.lien_parente) }}
    	{{ form_row(form.ville) }}
    	
	</div>

	<div class="modal-footer">
		{{ form_widget(form.save) }}
	</div>
	{{ form_rest(form) }}
	{{ form_errors(form) }}
	{{ form_end(form) }}

	{% block javascripts %}
	<script type="text/javascript">
    
    	$('#modal_temoignage_global').modal({
    		   'show' : true,
    		   'backdrop' : 'static'
    	});
    	
		var url = '{{path('temoignage_ajax_add', {'id': objet.id, 'type': type }) }}';
		Temoignage.EventAddSubmit(url);
	</script>
	{% endblock %}
</div>