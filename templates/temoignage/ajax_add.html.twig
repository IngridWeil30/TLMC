<div id="ajax_temoignage_add">
	{{ form_start(form) }}
	<div class="modal-header">
		<h5 class="modal-title">
			Ajout d'un t√©moignage au membre {{ membre.prenom }} {{ membre.nom }}
		</h5>
		<button type="button" class="close" data-dismiss="modal"
			aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>

	<div class="modal-body">
        {{ form_start(form) }}
    
        {{ form_row(form.titre) }}
    	{{ form_row(form.corps) }}
    	{{ form_row(form.prenom_temoin) }}
    	{{ form_row(form.age) }}
    	{{ form_row(form.lien_parente) }}
    	{{ form_row(form.ville) }}
    	{{ form_row(form.evenement) }}
    	{{ form_row(form.produit) }}
	</div>

	<div class="modal-footer">
		{{ form_widget(form.save) }}
	</div>
	{{ form_rest(form) }}
	{{ form_errors(form) }}
	{{ form_end(form) }}

