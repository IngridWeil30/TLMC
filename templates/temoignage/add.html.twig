{% extends 'base.html.twig' %}

{% block title %} Nouveau témoigange {% endblock %}

{% block body %}

<h1>Ajout d'un nouveau témoignage</h1>

{% include 'elements/arborescence.html.twig' %}

<div>
    {{ form_start(form) }}
    
    {{ form_row(form.titre) }}
	{{ form_row(form.corps) }}
	{{ form_row(form.prenom_temoin) }}
	{{ form_row(form.age) }}
	{{ form_row(form.lien_parente) }}
	{{ form_row(form.ville) }}
	{{ form_row(form.evenement) }}
	{{ form_row(form.produit) }}
	
    {{ form_rest(form) }}
    {{ form_errors(form) }}
    {{ form_end(form) }}
    
</div>
	  
{% endblock %}