<div id="ajax_produit_etablissement_add">
	{{ form_start(form) }}
	<div class="modal-header">
		<h5 class="modal-title">
		{% if type == 'produit' %}
			Ajout d'un lien avec le produit #{{ objet.id }} - {{ objet.titre }}
		{% elseif type == 'etablissement' %}
			Ajout d'un lien avec l'Ã©tablissement #{{ objet.id }} - {{ objet.nom }}
		{% endif %}
		</h5>
		<button type="button" class="close" data-dismiss="modal"
			aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>

	<div class="modal-body">
		{{ form_row(form.produit) }}
		{{ form_row(form.etablissement) }}
		{{ form_row(form.quantite) }}
	</div>
	
	<div class="modal-footer">
		{{ form_widget(form.save) }}
	</div>
	{{ form_rest(form) }}
	{{ form_errors(form) }}
	{{ form_end(form) }}
</div>

{% block javascripts %}
	<script type="text/javascript">
    
    	$('#modal_{{ type }}_global').modal({
    		   'show' : true,
    		   'backdrop' : 'static'
    	});
    	
		var url = '{{path('produit_etablissement_ajax_add', {'id': objet.id, 'type': type }) }}';
		ProduitEtablissement.EventAddSubmit(url);
		
	</script>
{% endblock %}