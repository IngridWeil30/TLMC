<div id="ajax_specialite_add">
	{{ form_start(form) }}
	<div class="modal-header">
		<h5 class="modal-title">
			Ajout d'une spécialité à l'établissement {{ etablissement.nom }}
		</h5>
		<button type="button" class="close" data-dismiss="modal"
			aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>

	<div class="modal-body">
		{{ form_row(form.etablissement) }}
		{{ form_row(form.service) }}
		{{ form_row(form.code_logistique) }}
		{{ form_row(form.adulte) }}
		{{ form_row(form.pediatrie) }}
	</div>

	<div class="modal-footer">
		{{ form_widget(form.save) }}
	</div>
	{{ form_rest(form) }}
	{{ form_errors(form) }}
	{{ form_end(form) }}

	{% block javascripts %}
	<script type="text/javascript">
    
    	$('#modal_etablissement_global').modal({
    		   'show' : true,
    		   'backdrop' : 'static'
    	});
    	
		var url = '{{path('specialite_ajax_add', {'id': etablissement.id }) }}';
		Specialite.EventAddSubmit(url);
	</script>
	{% endblock %}
</div>