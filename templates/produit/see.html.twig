{% extends 'base.html.twig' %}

{% block title %} Fiche d'un produit {% endblock %}

{% block body %}

    <h1>Fiche du produit #{{ produit.id }} - {{ produit.titre }}</h1>
    
    {% include 'elements/arborescence.html.twig' %}
    
    <table  class="table table-sm">
    	<tr>
    		<th scope="col"> Titre </th>
    		<td> {{ produit.titre }} </td>
    	</tr>
    	<tr>
    		<th scope="col"> Type </th>
    		<td> {{ produit.type | typeProduit }} </td>
    	</tr>
    	<tr>
    		<th scope="col"> Description </th>
    		<td> 
    		    {{ produit.texte }} <br />
    		    {{ produit.texte2 }} 
    		</td>
    	</tr>
    	<tr>
    		<th scope="col"> Tranche d'âge </th>
    		<td> 
    			{% for tranche in produit.trancheAge %}
    		        {{ tranche | trancheAge}} <br/> 
    		    {% endfor %}
    		</td>
    	</tr>
    	<tr>
    		<th scope="col"> Genre </th>
    		<td> {{ produit.genre | genre}} </td>
    	</tr>
    	<tr>
    		<th scope="col"> Quantité </th>
    		<td> {{ produit.quantite }} </td>
    	</tr>
    	<tr>
    		<th scope="col">Date d'envoi </th>
    		<td> {{ produit.dateEnvoi | date('d/m/Y') }} </td>
    	</tr>
    	<tr>
    		<th scope="col">Date de création </th>
    		<td> {{ produit.dateCreation | date('d/m/Y') }} </td>
    	</tr>
    </table>
    <br />

	<div id="bloc_produit_temoignage">
    	<div class="row">
    		<div class="col-md-4 offset-md-4">
    			<div class="progress" style="height: 25px;">
    				<div class="progress-bar progress-bar-striped progress-bar-animated"
    					role="progressbar" aria-valuenow="75" aria-valuemin="0"
    					aria-valuemax="100" style="width: 50%">Chargement des
    					informations des témoignages...</div>
    			</div>
    		</div>
    	</div>
    </div>
    
    <!-- Modal -->
    <div class="modal fade" id="modal_temoignage_global" tabindex="-1" role="dialog">
    	<div class="modal-dialog" role="document">
    		<div class="modal-content" id="bloc_modal"></div>
    	</div>
    </div>
    
    <div>établissements</div>
    <div>spécialité</div>
    <div>extension de formulaire</div>
    <div>questionnaire</div>

{% endblock %}

{% block script %}
 	<script src="{{ asset('assets/js/temoignage/Temoignage.js') }}?{{ date().timestamp }}"></script>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
    
    $(document).ready(function() {

    	var params = {
				url_ajax_see : '{{path('temoignage_ajax_see', {'id': produit.id, 'type': 'produit'}) }}',
				id_content_modal : '#bloc_modal',
				id_modal : '#modal_temoignage_global',
				id_global : '#bloc_produit_temoignage',
		};
        
    	Temoignage.Launch(params);
    	Temoignage.LoadTemoignage();
    });
    
    </script>
{% endblock %}