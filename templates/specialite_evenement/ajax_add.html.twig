<div id="ajax_specialite_evenement_add">
	{{ form_start(form) }}
	<div class="modal-header">
		<h5 class="modal-title">
			Ajout d'un lien avec 
			{% if type == 'evenement' %}
				l'événement #{{ objet.id }} - {{ objet.nom }}
			{% elseif type == 'specialite' %}
				la spécialité #{{ objet.id }} - {{ objet.service }}
			 {% endif %}
		</h5>
		<button type="button" class="close" data-dismiss="modal"
			aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>

	<div class="modal-body">
		{{ form_row(form.evenement) }}
		{{ form_row(form.specialite) }}
		{{ form_row(form.statut) }}
	</div>
	
	<div class="modal-footer">
		{{ form_widget(form.save) }}
	</div>
	{{ form_rest(form) }}
	{{ form_errors(form) }}
	{{ form_end(form) }}
</div>

{% block javascripts %}
	<script type="text/javascript">
    
    	$('#modal_{{ type }}_global').modal({
    		   'show' : true,
    		   'backdrop' : 'static'
    	});
    	
		var url = '{{path('specialite_evenement_ajax_add', {'id': objet.id, 'type': type }) }}';
		SpecialiteEvenement.EventAddSubmit(url);
		
	</script>
{% endblock %}