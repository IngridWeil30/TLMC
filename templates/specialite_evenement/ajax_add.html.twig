<div id="ajax_specialite_evenement_add">
	{{ form_start(form) }}
	<div class="modal-header">
		<h5 class="modal-title">
			Ajout d'un lien avec l'événement #{{ evenement.id }} - {{ evenement.nom }}
		</h5>
		<button type="button" class="close" data-dismiss="modal"
			aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>

	<div class="modal-body">
		{{ form_row(form.evenement) }}
		{{ form_row(form.specialite) }}
		{{ form_row(form.date) }}
		{{ form_row(form.statut) }}
	</div>
	
	<div class="modal-footer">
		{{ form_widget(form.save) }}
	</div>
	{{ form_rest(form) }}
	{{ form_errors(form) }}
	{{ form_end(form) }}
</div>

{% block javascripts %}
	<script type="text/javascript">
    
    	$('#modal_evenement_global').modal({
    		   'show' : true,
    		   'backdrop' : 'static'
    	});
    	
		var url = '{{path('specialite_evenement_ajax_add', {'id': evenement.id }) }}';
		SpecialiteEvenement.EventAddSubmit(url);
		
	</script>
{% endblock %}